<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/houseItem_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="#FFFFFFFF"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/houseItem_profile_image"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/houseItem_payment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="매매"
                    android:textColor="#FFFF0000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/houseItem_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="5억 1000 생기면 좋겠다"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/houseItem_house_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="house info | house info | house info"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/houseItem_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="description description description description description"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>