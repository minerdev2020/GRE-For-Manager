<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/imageItem_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageItem_imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/house" />

        <ImageButton
            android:id="@+id/imageItem_imageButton_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:src="@drawable/ic_round_delete_24" />

        <ImageButton
            android:id="@+id/imageItem_imageButton_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:src="@drawable/ic_round_photo_24" />

        <TextView
            android:id="@+id/imageItem_textView_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:background="#AA990000"
            android:padding="8dp"
            android:text="대표사진"
            android:textColor="#FF000000" />
    </FrameLayout>

    <View style="@style/Divider" />
</LinearLayout>