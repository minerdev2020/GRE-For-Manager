<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="5dp"
    android:paddingVertical="10dp">

    <TextView
        style="@style/TextAppearance.AppCompat.Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="매물 정보" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:stretchColumns="1">

        <View style="@style/Divider" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="@dimen/house_modify_text_width"
                android:layout_height="@dimen/house_modify_widget_height"
                android:gravity="center"
                android:text="매물 종류" />

            <Spinner
                android:id="@+id/house_modify_spinner_houseType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center" />
        </TableRow>

        <View style="@style/Divider" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="@dimen/house_modify_text_width"
                android:layout_height="@dimen/house_modify_widget_height"
                android:gravity="center"
                android:text="계약 형태" />

            <Spinner
                android:id="@+id/house_modify_spinner_paymentType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center" />
        </TableRow>

        <View style="@style/Divider" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="@dimen/house_modify_text_width"
                android:layout_height="@dimen/house_modify_widget_height"
                android:gravity="center"
                android:text="가격 정보" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="40dp">

                <EditText
                    android:id="@+id/house_modify_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="만원" />
            </LinearLayout>
        </TableRow>

        <View style="@style/Divider" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="@dimen/house_modify_text_width"
                android:layout_height="@dimen/house_modify_widget_height"
                android:gravity="center"
                android:text="관리비 정보" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <EditText
                    android:id="@+id/house_modify_editText_manage_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="만원" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/house_modify_checkBox_manage_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="관리비 없음" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/house_modify_manage_fee_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_span="2"
                android:orientation="vertical"
                android:visibility="visible">

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전기" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수도" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가스" />
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인터넷" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="케이블" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기타" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>
        </TableRow>

        <View style="@style/Divider" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="@dimen/house_modify_text_width"
                android:layout_height="@dimen/house_modify_widget_height"
                android:gravity="center"
                android:text="전용 면적" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <EditText
                    android:id="@+id/house_modify_area_meter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberSigned" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="㎡=" />

                <EditText
                    android:id="@+id/house_modify_area_pyeong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberSigned" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="평" />
            </LinearLayout>
        </TableRow>

        <View style="@style/Divider" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="@dimen/house_modify_text_width"
                android:layout_height="@dimen/house_modify_widget_height"
                android:gravity="center"
                android:text="층" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <EditText
                    android:id="@+id/house_modify_editText_floor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="층" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/house_modify_checkBox_underground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반지하" />
            </LinearLayout>
        </TableRow>

        <View style="@style/Divider" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="@dimen/house_modify_text_width"
                android:layout_height="@dimen/house_modify_widget_height"
                android:gravity="center"
                android:text="구조" />

            <Spinner
                android:id="@+id/house_modify_spinner_structure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center" />
        </TableRow>

        <View style="@style/Divider" />

    </TableLayout>
</LinearLayout>
