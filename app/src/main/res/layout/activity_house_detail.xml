<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".HouseDetailActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/house_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="10dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:menu="@menu/house_detail_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_slider_height"
                    android:orientation="vertical">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/house_detail_viewPager_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFEEEEEE" />
                </LinearLayout>

                <View style="@style/Divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/house_detail_textView_paymentType"
                                style="@style/TextAppearance.AppCompat.Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="전세"
                                android:textColor="#FFFF0000" />

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/house_detail_textView_price"
                                style="@style/TextAppearance.AppCompat.Headline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1억5000" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="매물 번호"
                                android:textSize="10sp" />

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/house_detail_textView_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="001001001"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/house_detail_textView_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="대구시 달성군 다사읍 달구벌대로174길 10-17" />
                    </LinearLayout>

                    <View style="@style/Divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="10dp">

                        <TextView
                            android:id="@+id/house_detail_textView_brief_info"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="55평 | 관리비 10만원 | 반듯한 원룸" />
                    </LinearLayout>

                    <View style="@style/Divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="10dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="매물 정보" />

                        <TableLayout
                            android:id="@+id/house_detail_tableLayout_house_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:stretchColumns="1">

                            <TableRow android:layout_marginBottom="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="매물 정보" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="매물 정보" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="매물 정보" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="매물 정보" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    <View style="@style/Divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="10dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="옵션 정보" />

                        <TableLayout
                            android:id="@+id/house_detail_tableLayout_option_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:stretchColumns="1">

                            <TableRow android:layout_marginBottom="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="옵션 정보" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="옵션 정보" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="옵션 정보" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="옵션 정보" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    <View style="@style/Divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="10dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="매물 위치" />

                        <fragment
                            android:id="@+id/map"
                            android:name="com.naver.maps.map.MapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_margin="10dp" />
                    </LinearLayout>

                    <View style="@style/Divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="10dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="상세 정보" />

                        <TextView
                            android:id="@+id/house_detail_textView_detail_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="상세한 설명." />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/house_detail_switch"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFEEEEEE"
            android:elevation="10dp"
            android:paddingHorizontal="20dp"
            android:text="판매 완료"
            android:textSize="20sp" />
    </LinearLayout>
</layout>
